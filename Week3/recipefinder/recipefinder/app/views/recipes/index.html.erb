<h1>Recipes for <%= @search_term %></h1>
<% if @recipes.nil? %>

<p>No recipes found with relevant information... Sorry.</p>

<% else %>

<table border="1">
	<tr>
		<th>Image</th>
		<th>Title</th>
		<th>Social Rank</th>
	</tr>
	<% @recipes.each do |recipe|%>
		<tr>
			<!-- image_tag like link_to -->
			<td><%= link_to image_tag(recipe["image_url"], size: '100'), recipe["f2f_url"] %></td>
			<td><%= link_to recipe["title"], recipe["f2f_url"] %></td>
			<td><%= recipe["social_rank"]%></td>
		</tr>
	<% end %>
</table>

<% end %>
